@model ProductDto
@{
}
<link rel="stylesheet" href="~/css/Style.css" />
<div class="container mt-5">
    <div class="col-lg-8 mx-auto card-dark">

        <h2 class="text-center mb-4 fw-bold text-light">Novo Produto</h2>
        <hr class="mb-4" style="border-color: rgba(255,255,255,0.1);">

        <form method="post" enctype="multipart/form-data">

            <!-- Nome -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Nome</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Name" placeholder="Digite o nome do produto">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
            </div>

            <!-- Marca -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Marca</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Brand" placeholder="Ex: Dell, Samsung, Lenovo">
                    <span asp-validation-for="Brand" class="text-danger small"></span>
                </div>
            </div>

            <!-- Categoria -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Categoria</label>
                <div class="col-sm-9">
                    <select class="form-select" asp-for="Category">
                        <option disabled selected>Selecione...</option>
                        <option value="Outros">Outros</option>
                        <option value="Eletrônicos">Eletrônicos</option>
                        <option value="Celular">Celulares</option>
                        <option value="Computadores">Computadores</option>
                        <option value="Notebooks">Notebooks</option>
                        <option value="Acessorios">Acessórios</option>
                    </select>
                </div>
            </div>

            <!-- Preço -->
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Preço</label>
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Price" placeholder="R$ 0,00">
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
            </div>

            <!-- Descrição -->
            <div class="mb-4 row">
                <label class="col-sm-3 col-form-label">Descrição</label>
                <div class="col-sm-9">
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Descreva o produto..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <!-- Botões -->
            <div class="row mt-4">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm">
                        Criar Produto
                    </button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a asp-controller="Products" asp-action="Index"
                       class="btn btn-secondary btn-lg fw-semibold shadow-sm">
                        Cancelar
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>
